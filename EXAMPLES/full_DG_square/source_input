#source 1.  The components of a moment tensor source must be given in N.m, not in dyne.cm as in the DATA/CMTSOLUTION source file of the 3D version of the code.

source_surf                     = .false.    # Source at the surface? If set to false, source is inside the medium.
xs                              = 0.0d0      # Source x location (m).
zs                              = 0.0d0      # Source y location (m).
source_type                     = 1          # Elastic force or acoustic pressure = 1, moment tensor = 2. For the moment, only 1 is supported by DG.

# Source time function type:
# Ricker = 1, first derivative = 2, Gaussian = 3, Dirac = 4, Heaviside = 5, 6 = ??, 7 = ??, 8 = read from file, 9 = burst.
time_function_type              = 3
name_of_source_file             = "/uoigaf/iuagzf/afb" # Only for time_function_type 8. File containing the source wavelet: two columns file with time and amplitude, dt must be equal (for the moment) to the dt of the simulation. File name can't exceed 150 characters.
burst_band_width                = 200.415d0  # Only for time_function_type 9. Band width of the burst.

f0                              = 30.0d0     # Only for time_function_type !=4 and !=5. Dominant source frequency (Hz).
tshift                          = 0.0d0      # Time shift when multiple sources (if one source, must be zero).
anglesource                     = 0.0d0      # Only for a force. Angle of the source.
Mxx                             = 0.0d0      # Only for moment tensor source. Mxx component.
Mzz                             = 0.0d0      # Only for moment tensor source. Mzz component.
Mxz                             = 0.0d0      # Only for moment tensor source. Mxz component.
factor                          = 127.530d0  # Amplification factor.
